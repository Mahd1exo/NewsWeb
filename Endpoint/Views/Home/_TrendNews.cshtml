@model List<News>
<ul class="list-group">
    @for (int i=0;i<Model.Count;i++){
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-2">
                    <p> @(i+1)</p>
                </div>
                <div class="col-md-10">
                    
                    <h5 style="font-size: 16px;">
                        <a href=" /home/SingleNews/@Model[i].NewsId" style="text-decoration:none">@Model[i].Title</a>
                        
                    </h5>
                </div>
            </div>
        </li>
    }

</ul>