@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model EditNewsViewModel
@{

    bool ish = !Model.news.IsHottestNews;
    bool isp = !Model.news.IsPublished;
}
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body dir="rtl">

    <div class="container mt-3">
        <h3>ویرایش خبر @Model.news.NewsId</h3>

        <form asp-action="EditNews" method="post">
                    <div class="form-group">
                        <label for="Title">عنوان :</label>
                        <input type="text" class="form-control" id="Title" name="Title" value="@Model.news.Title">
                    </div>
                    <div class="form-group">
                        <label for="Description">شرح خبر :</label>
                <textarea type="text" class="form-control" id="Description" name="Description" rows="3">@Model.news.Description</textarea>
                    </div>
                    <div class="form-group">
                        <label for="Content">محنوا :</label>
                <textarea type="text" class="form-control" id="Content" name="Content" rows="8">@Model.news.Content"</textarea>
                    </div>
                    <div class="form-group">
                        <label for="ImageUrl">آدرس عکس :</label>
                        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" value="@Model.news.ImageUrl">
                    </div>

                    <div class="form-group">
                        <label for="CategoryId">موضوع : @for (int i = 0; i < Model.Categories.Count; i++)
                    {
                        if (Model.news.CategoryId==Model.Categories[i].CategoryId)
                        {
                            <h6>@Model.Categories[i].Name</h6>
                        }
                    }
                        
                        </label>
                        <select class="form-select form-select-md" id="CategoryId" name="CategoryId">
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item.CategoryId">@item.Name</option>
                            }
                        </select>
                    </div>

                    <div class="container form-group">
                        <div class="row">
                            <div class="col-md-6"> <label class="form-check-label">
                            خبر داغ ؟
                        </label>
                        <select class="form-select form-select-md" id="IsHottestNews" name="IsHottestNews">
                            <option value="@Model.news.IsHottestNews" selected>@Model.news.IsHottestNews</option>
                            <option value="@ish">@ish</option>
                        </select></div>
                            <div class="col-md-6">

                                 <label class="form-check-label">
                                   نشر ؟
                        </label>
                                <select class="form-select form-select-md" id="IsPublished" name="IsPublished">
                            <option value="@Model.news.IsPublished" selected>@Model.news.IsPublished</option>
                            <option value="@isp">@isp</option>
                        </select>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.news.NewsId" name="NewsId">
            <input type="hidden" value="@Model.news.ViewCount" name="NewsId">
                    <hr />

                    <button type="submit" class="btn btn-success">تایید خبر</button>
                </form>

            </div>
    </div>


</body>
</html>
