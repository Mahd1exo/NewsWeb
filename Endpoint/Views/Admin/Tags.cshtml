@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int x = 1;
}
@model List<Tag>
<div class="container">
	<div class="row">
		<form asp-action="AddTag" method="post">
			<div class="row">
				<div class="col-md-5">
					<label for="Title" style="font-size:20px">نام تگ :</label>
					<input type="text" class="form-control" id="Name" name="Name">
				</div>
				<div class="col-5">
					<br>
					<button type="submit" class="btn btn-success "> ثبت تگ</button>
				</div>
			</div>

		</form>
	</div>
<div class="row">
    <h2>لیست تگ ها </h2>
    <table class="table-fluid table-bordered table-hover table-condensed table-striped">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>شناسه تگ</th>
                <th> عنوان</th>
                <th>تعداد اخبار</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(x++)</td>
                    <td>@item.TagId</td>
                    <td>@item.Name</td>
                    <td>@item.NewsTag.Count</td>
                    <td>
                        <div class="container">
                            <div class="row">

                                <div class="col-md-6"><a href="~/admin/DeleteTag/@item.TagId" class="btn btn-sm btn-danger">حذف</a></div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
</div>
<hr/>

